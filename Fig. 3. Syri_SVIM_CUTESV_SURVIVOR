for ((i=0; i<${#GENOME_LIST[@]}-1; i++)); do
  for ((j=i+1; j<${#GENOME_LIST[@]}; j++)); do
    g1=${GENOME_LIST[$i]}
    g2=${GENOME_LIST[$j]}
    sr_file="${g1}.${g2}.syri/syri.out"
    if [[ -f "$sr_file" ]]; then
      SR_ARGS+=" --sr $sr_file"
    fi
  done
done

# Run plotsr
plotsr $SR_ARGS \
  --genomes genomes.txt \
  --cfg base.cfg \
  --chr Chr01 \
  -o plotsr_sorghum_50genomes_Chr01.draft1.pdf \
  -S 0.6 -W 3 -H 10 -f 10


